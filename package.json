{
  "name": "vim-motion-trainer",
  "displayName": "Vim Motion Trainer",
  "description": "Learn vim motions through Cursor's AI suggestions",
  "version": "0.1.0",
  "publisher": "eyepatch12",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "keywords": [
    "vim",
    "cursor",
    "ai",
    "learning",
    "motions",
    "navigation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vim-motion-trainer.toggle",
        "title": "Toggle Vim Motion Hints",
        "category": "Vim Motion Trainer"
      },
      {
        "command": "vim-motion-trainer.switchProvider",
        "title": "Switch LLM Provider",
        "category": "Vim Motion Trainer"
      },
      {
        "command": "vim-motion-trainer.testProvider",
        "title": "Test Provider Connection",
        "category": "Vim Motion Trainer"
      },
      {
        "command": "vim-motion-trainer.clearCache",
        "title": "Clear Motion Cache",
        "category": "Vim Motion Trainer"
      }
    ],
    "keybindings": [
      {
        "command": "vim-motion-trainer.toggle",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Vim Motion Trainer",
      "properties": {
        "vimMotionTrainer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable vim motion hints"
        },
        "vimMotionTrainer.activeProvider": {
          "type": "string",
          "enum": [
            "claude"
          ],
          "default": "claude",
          "description": "Active LLM provider for motion calculation"
        },
        "vimMotionTrainer.providers.claude.apiKey": {
          "type": "string",
          "description": "Claude API key from Anthropic console"
        },
        "vimMotionTrainer.providers.claude.model": {
          "type": "string",
          "enum": [
            "claude-3-5-sonnet-20241022",
            "claude-3-haiku-20240307",
            "claude-3-opus-20240229"
          ],
          "default": "claude-3-5-sonnet-20241022",
          "description": "Claude model to use"
        },
        "vimMotionTrainer.userLevel": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced"
          ],
          "default": "intermediate",
          "description": "Your vim skill level"
        },
        "vimMotionTrainer.hoverDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 3000,
          "description": "Delay before showing hints (milliseconds)"
        },
        "vimMotionTrainer.maxContextLines": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum lines of code context to send to LLM"
        },
        "vimMotionTrainer.showDebugInfo": {
          "type": "boolean",
          "default": false,
          "description": "Show debug information in hover hints"
        },
        "vimMotionTrainer.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable caching of motion calculations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vim-motion-trainer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/vim-motion-trainer/issues"
  },
  "homepage": "https://github.com/yourusername/vim-motion-trainer#readme",
  "license": "MIT"
}
